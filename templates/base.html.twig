{# templates/base.html.twig #}
<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1" />
        <title>{% block title %}Mon Site{% endblock %}</title>

        <!-- Bootstrap CSS -->
        <link
            rel="stylesheet"
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
        />

        <!-- Bloc pour CSS spécifique aux pages -->
        {% block styles %}
        <style>
            /* back ground */
            body {
                background-color: #ffe1a8;
                display: flex;
                flex-direction: column;
                min-height: 100vh;
                margin: 0;
            }

            /* NAVBAR */
            .navbar .navbar-brand,
            .navbar .nav-link {
                font-size: 1.5rem !important;
            }

            /* footer */
            footer {
                background-color: #472d30;
                color: white;
                font-size: 1.2rem;
                line-height: 1.6;
                padding: 3rem 0;
                min-height: 30vh;
                display: flex;
                align-items: center;
                width: 100vw;
                position: relative;
                left: 50%;
                right: 50%;
                margin-left: -50vw;
                margin-right: -50vw;
            }

            footer h5 {
                font-size: 1.5rem;
                margin-bottom: 1rem;
            }
        </style>
        {% endblock %}
    </head>

    <body>
        <!-- Navbar -->
        <nav class="navbar navbar-expand-lg" style="background-color: #472d30">
            <div class="container">
                <a
                    class="navbar-brand text-white fw-bold d-flex align-items-center"
                    href="{{ path('app_home') }}"
                >
                    <img
                        src="{{ asset('assets/castor.png') }}"
                        alt="Logo"
                        style="height: 80px; width: auto; margin-right: 0.5rem"
                    />
                </a>

                <button
                    class="navbar-toggler text-white"
                    type="button"
                    data-bs-toggle="collapse"
                    data-bs-target="#navbarContent"
                    aria-controls="navbarContent"
                    aria-expanded="false"
                    aria-label="Toggle navigation"
                >
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarContent">
                    <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a
                                class="nav-link text-white"
                                href="{{ path('app_home') }}"
                                >Accueil</a
                            >
                        </li>
                        <li class="nav-item">
                            <a
                                class="nav-link text-white"
                                href="{{ path('product_index') }}"
                                >Produits</a
                            >
                        </li>
                        <li class="nav-item">
                            <a
                                class="nav-link text-white"
                                href="{{ path('app_contact') }}"
                                >Contact</a
                            >
                        </li>


                        

                        {% if app.user %}
                        <li class="nav-item">
                            <a
                                class="nav-link text-white"
                                href="{{
                                    path('show_basket', {
                                        id_user: app.user.id
                                    })
                                }}"
                                >Panier</a
                            >
                        </li>
                        {% if is_granted('ROLE_ADMIN') %}
                        <li class="nav-item">
                            <a
                                class="nav-link text-white"
                                href="{{ path('admin_dashboard') }}"
                                >Admin</a
                            >
                        </li>
                        {% endif %}
                        <li class="nav-item">
                            <a
                                class="nav-link text-white"
                                href="{{ path('app_logout') }}"
                                >Logout</a
                            >
                        </li>
                        {% else %}
                        <li class="nav-item">
                            <a
                                class="nav-link text-white"
                                href="{{ path('app_login') }}"
                                >Login</a
                            >
                        </li>
                        {% endif %}
                    </ul>
                </div>
            </div>
        </nav>


        <!-- Contenu principal -->
        <div class="container mt-4">
            {% for message in app.flashes('success') %}
            <div class="alert alert-success">{{ message }}</div>
            {% endfor %} {% block body %}{% endblock %}
        </div>

        <!-- Footer -->
        <footer>
            {% block footer %}
            <div class="container text-center text-md-start">
                <div class="row">
                    <!-- Colonne 1 -->
                    <div class="col-md-4 mb-4">
                        <h5 class="fw-bold">Castor - Storebanne</h5>
                        <p>
                            Une petite description de ton site, ton slogan ou ta
                            mission.
                        </p>
                    </div>

                    <!-- Colonne 2 -->
                    <div class="col-md-4 mb-4">
                        <h5 class="fw-bold">Liens utiles</h5>
                        <ul class="list-unstyled">
                            <li>
                                <a
                                    href="{{ path('app_home') }}"
                                    class="text-white text-decoration-none"
                                    >Accueil</a
                                >
                            </li>
                            <li>
                                <a
                                    href="{{ path('product_index') }}"
                                    class="text-white text-decoration-none"
                                    >Produits</a
                                >
                            </li>
                            {% if app.user %}
                            <li>
                                <a
                                    href="{{ path('app_logout') }}"
                                    class="text-white text-decoration-none"
                                    >Logout</a
                                >
                            </li>
                            {% else %}
                            <li>
                                <a
                                    href="{{ path('app_login') }}"
                                    class="text-white text-decoration-none"
                                    >Login</a
                                >
                            </li>
                            {% endif %}
                        </ul>
                    </div>

                    <!-- Colonne 3 -->
                    <div class="col-md-4 mb-4">
                        <h5 class="fw-bold">Contact</h5>
                        <ul class="list-unstyled">
                            <li>Email : contact@monsite.com</li>
                            <li>Téléphone : 01 23 45 67 89</li>
                            <li>Adresse : Paris, France</li>
                        </ul>
                    </div>
                </div>

                <hr class="border-light" />

                <div class="text-center">
                    &copy; {{ "now"|date("Y") }} MonSite - Tous droits réservés
                </div>
            </div>
            {% endblock %}
        </footer>

        <!-- Bootstrap JS -->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    </body>
</html>
