{% extends 'base.html.twig' %}

{% block title %}S'inscrire{% endblock %}

{% block styles %}
{{ parent() }}
<style>
  .wf-container {
    padding-top: 2.5rem;
    padding-bottom: 2.5rem;
  }

  .wf-title-bar {
    background:#472D30;
    color: white;
    border-radius:.5rem;
    padding:.85rem 1.25rem;
  }

  .wf-panel {
    background: url("{{ asset('wood-pattern.jpg') }}") repeat center center, #472D30;
    border-radius: .75rem;
    padding: 2rem;
    box-shadow: 0 0.25rem 0.75rem rgba(0,0,0,0.1);
  }

  .wf-section {
    margin-top:2.5rem;
    margin-bottom:2.5rem;
  }

  .btn-primary {
    background-color: #6F8F72;
    border: none;
    font-size: 1.1rem;
    padding: 0.75rem 1.5rem;
    border-radius: 0.5rem;
  }

  .btn-primary:hover {
    background-color: #5a705c;
  }

  .form-floating input, .form-floating select, .form-floating textarea {
    height: 50px;
    padding: 1rem 0.75rem;
  }

  .form-floating textarea {
    height: 150px;
  }

  .required-note {
    color: red;
    margin-top: 0.5rem;
  }
</style>
{% endblock %}

{% block body %}
<div class="wf-container">
  <!-- Titre -->
  <div class="row wf-section">
    <div class="col-12 col-md-8 offset-md-2">
      <div class="wf-title-bar text-center">
        <h1 class="h3 m-0">Créer un compte</h1>
      </div>
    </div>
  </div>

  <!-- Formulaire d'inscription -->
  <section id="register" class="row wf-section">
    <div class="col-12 col-md-8 offset-md-2">
      <div class="wf-panel">

        {{ form_start(registrationForm, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}

          <div class="form-floating mb-3">
            {{ form_widget(registrationForm.email, {'attr': {'class': 'form-control', 'placeholder': 'Email'}}) }}
            {{ form_label(registrationForm.email, 'Email *') }}
            {{ form_errors(registrationForm.email) }}
          </div>

          <div class="form-floating mb-3">
            {{ form_widget(registrationForm.name, {'attr': {'class': 'form-control', 'placeholder': 'Nom'}}) }}
            {{ form_label(registrationForm.name, 'Nom *') }}
            {{ form_errors(registrationForm.name) }}
          </div>

          <div class="form-floating mb-3">
            {{ form_widget(registrationForm.address, {'attr': {'class': 'form-control', 'placeholder': 'Adresse'}}) }}
            {{ form_label(registrationForm.address, 'Adresse') }}
            {{ form_errors(registrationForm.address) }}
          </div>

          <div class="form-floating mb-3">
            {{ form_widget(registrationForm.country, {'attr': {'class': 'form-control', 'placeholder': 'Pays'}}) }}
            {{ form_label(registrationForm.country, 'Pays *') }}
            {{ form_errors(registrationForm.country) }}
          </div>

          <div class="form-floating mb-3">
            {{ form_widget(registrationForm.phone, {'attr': {'class': 'form-control', 'placeholder': 'Téléphone'}}) }}
            {{ form_label(registrationForm.phone, 'Téléphone *') }}
            {{ form_errors(registrationForm.phone) }}
          </div>

          <div class="form-floating mb-3">
            {{ form_widget(registrationForm.zipCode, {'attr': {'class': 'form-control', 'placeholder': 'Code postal'}}) }}
            {{ form_label(registrationForm.zipCode, 'Code postal *') }}
            {{ form_errors(registrationForm.zipCode) }}
          </div>

          <div class="form-floating mb-3">
            {{ form_widget(registrationForm.town, {'attr': {'class': 'form-control', 'placeholder': 'Ville'}}) }}
            {{ form_label(registrationForm.town, 'Ville *') }}
            {{ form_errors(registrationForm.town) }}
          </div>

          <div class="form-floating mb-3">
            {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'form-control', 'placeholder': 'Mot de passe'}}) }}
            {{ form_label(registrationForm.plainPassword, 'Mot de passe *') }}
            {{ form_errors(registrationForm.plainPassword) }}
          </div>

          <div class="form-check mb-3">
            {{ form_widget(registrationForm.agreeTerms, {'attr': {'class': 'form-check-input'}}) }}
            {{ form_label(registrationForm.agreeTerms, 'J’accepte les conditions', {'label_attr': {'class': 'form-check-label'}}) }}
            {{ form_errors(registrationForm.agreeTerms) }}
          </div>

          <p class="required-note">* Champs obligatoires</p>

          <button class="btn btn-primary w-100">S'inscrire</button>

        {{ form_end(registrationForm) }}
      </div>
    </div>
  </section>
</div>
{% endblock %}
