{% extends 'admin/baseAdmin.html.twig' %}
{% block title %}Liste des produits{% endblock %}

{% block body %}
<section class="container">
  <h1>Liste des utilisateurs et clients du site</h1>
  <table class="table table-striped">
    <thead>
      <tr>
        <th scope="col">ID</th>
        <th scope="col">Nom du client</th>
        <th scope="col">Email</th>
        <th scope="col">Adresse</th>
        <th scope="col">Ville</th>
        <th scope="col">Code postal</th>
        <th scope="col">Numéro de téléphone</th>
        <th scope="col">Supprimer le client définitivement</th>
      </tr>
    </thead>
    <tbody>
      {% for user in users %}
    <tr>
      <td scope="row">{{user.id}}</td>
      <td>{{user.name}}</td>
      <td>{{user.email}}</td>
      <td>{{user.address}}</td>
      <td>{{user.town}}</td>
      <td>{{user.zipCode}}</td>
      <td>{{user.phone}}</td>
      <td><a class="btn btn-danger" href="{{path('delete_user', {id:user.id}) }}">Supprimer</a></td>
    </tr>
    {% endfor %}
    </tbody>
  </table>
</section>

{% endblock %}