{% extends 'admin/baseAdmin.html.twig' %}

{% block title %}Update produit
{% endblock %}

{% block body %}
	<div class="wf-container">
		<div class="row wf-section">
			<div class="col-12 col-md-8 offset-md-2">
				<div class="wf-title-bar text-center">
					<h1 class="h3 m-0">Mise à jour du produit {{productToUpdate.name}}</h1>
				</div>
			</div>
		</div>
		<section class="row wf-section">
			<div class="col-12 col-md-8 offset-md-2">
				<div class="wf-panel">
					{{ form_start(formView) }}
					<div class="mb-3">
						{{ form_label(formView.name, 'Nom du produit') }}
						{{ form_widget(formView.name, {'attr': {'class': 'form-control'}}) }}
					</div>
					<div class="mb-3">
						{{ form_label(formView.description, 'Description du produit') }}
						{{ form_widget(formView.description, {'attr': {'class': 'form-control'}}) }}
					</div>
					<div class="mb-3">
						{{ form_label(formView.quantity, 'Quantité en stock') }}
						{{ form_widget(formView.quantity, {'attr': {'class': 'form-control'}}) }}
					</div>
					<div class="mb-3">
						{{ form_label(formView.price, 'Prix du produit') }}
						{{ form_widget(formView.price, {'attr': {'class': 'form-control'}}) }}
					</div>
					<div class="mb-3">
						{{ form_label(formView.image, 'Photo du produit') }}
						{{ form_widget(formView.image, {'attr': {'class': 'form-control'}}) }}
						{{ form_errors(formView.image) }}
					</div>

					<div class="text-center">
						<button type="submit" class="btn btn-primary" style="width: 100%;">Créer le produit</button>
					</div>
					<span style="visibility: hidden;">{{ form_end(formView) }}</span>
				</div>

			</div>
		</div>
	</section>
</div>{% endblock %}
